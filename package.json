{
  "name": "vibe-stack",
  "version": "1.0.0",
  "description": "AI-powered development environment with Vibe-Kanban, Open WebUI, and code-server",
  "private": true,
  "type": "module",
  "workspaces": [
    "mcp-server"
  ],
  "scripts": {
    "version:get": "node scripts/utils/version.js get",
    "version:patch": "node scripts/utils/version.js patch && npm run version:sync",
    "version:minor": "node scripts/utils/version.js minor && npm run version:sync",
    "version:major": "node scripts/utils/version.js major && npm run version:sync",
    "version:set": "node scripts/utils/version.js set",
    "version:sync": "node scripts/utils/version.js sync",
    "version:badge": "node scripts/utils/version.js badge",
    "docs:build": "node scripts/docs/build.js all",
    "docs:build:readme": "node scripts/docs/build.js readme",
    "docs:watch": "nodemon --watch version.json --exec 'npm run docs:build'",
    "prepack": "npm run version:sync && npm run docs:build",
    "test": "cd mcp-server && npm test",
    "test:coverage": "cd mcp-server && npm run test:coverage",
    "test:watch": "cd mcp-server && npm run test:watch",
    "test:verbose": "cd mcp-server && npm run test:verbose",
    "test:models": "cd mcp-server && npm run test:models",
    "test:validation": "cd mcp-server && npm run test:validation",
    "test:services": "cd mcp-server && npm run test:services",
    "test:controllers": "cd mcp-server && npm run test:controllers",
    "test:error-handling": "cd mcp-server && npm run test:error-handling",
    "test:security": "cd mcp-server && npm run test:security",
    "test:e2e": "cd mcp-server && npm run test:e2e",
    "test:e2e:docker": "cd mcp-server && npm run test:e2e:docker",
    "test:e2e:fullstack": "cd mcp-server && npm run test:e2e:fullstack",
    "test:e2e:performance": "cd mcp-server && npm run test:e2e:performance",
    "coverage": "cd mcp-server && npm run coverage",
    "coverage:open": "cd mcp-server && npm run coverage:open",
    "mcp:start": "cd mcp-server && npm start",
    "mcp:dev": "cd mcp-server && npm run dev",
    "mcp:debug": "cd mcp-server && npm run debug",
    "update": "npm update && npm audit fix",
    "audit": "npm audit",
    "audit:fix": "npm audit fix",
    "docker:build": "docker compose build",
    "docker:up": "docker compose up -d",
    "docker:down": "docker compose down",
    "docker:logs": "docker compose logs -f",
    "docker:restart": "docker compose restart",
    "prepare": "husky install",
    "hooks:install": "husky install",
    "hooks:uninstall": "husky uninstall",
    "docker:ps": "docker compose ps",
    "docker:top": "docker compose top",
    "docker:stats": "docker compose stats",
    "docker:events": "docker compose events",
    "docker:logs:vibe": "docker compose logs -f vibe-kanban",
    "docker:logs:postgres": "docker compose logs -f postgres",
    "docker:logs:mcp": "docker compose logs -f mcp-server",
    "docker:logs:tail": "docker compose logs --tail=100 -f",
    "docker:shell:vibe": "docker compose exec vibe-kanban bash || docker compose exec vibe-kanban sh",
    "docker:shell:postgres": "docker compose exec postgres psql -U vibeuser -d vibestack",
    "docker:shell:mcp": "docker compose exec mcp-server sh",
    "docker:prune": "docker system prune -f",
    "docker:clean": "docker compose down -v --remove-orphans",
    "docker:rebuild": "docker compose build --no-cache",
    "docker:pull": "docker compose pull",
    "docker:dev": "docker compose -f docker-compose.yml -f docker-compose.dev.yml up",
    "docker:dev:build": "docker compose -f docker-compose.yml -f docker-compose.dev.yml build",
    "docker:dev:down": "docker compose -f docker-compose.yml -f docker-compose.dev.yml down",
    "docker:prod": "docker compose -f docker-compose.yml -f docker-compose.prod.yml up -d",
    "docker:prod:build": "docker compose -f docker-compose.yml -f docker-compose.prod.yml build",
    "docker:monitoring": "docker compose -f docker-compose.monitoring.yml up -d",
    "docker:monitoring:down": "docker compose -f docker-compose.monitoring.yml down",
    "docker:health": "docker compose ps --format 'table {{.Name}}\t{{.Status}}\t{{.Ports}}'",
    "docker:wait": "docker compose up -d && timeout 120 sh -c 'until docker compose ps | grep -q healthy; do sleep 2; done'",
    "docker:test": "bash scripts/docker/test-docker.sh",
    "docker:validate": "bash scripts/docker/validate-env.sh",
    "backup:create": "bash scripts/ops/backup-volumes.sh --full",
    "backup:postgres": "bash scripts/ops/backup-volumes.sh --postgres",
    "backup:list": "bash scripts/ops/backup-volumes.sh --list",
    "backup:prune": "bash scripts/ops/backup-volumes.sh --prune",
    "dashboard": "bash scripts/ops/health-dashboard.sh"
  },
  "keywords": [
    "ai",
    "development",
    "kanban",
    "mcp",
    "open-webui",
    "code-server",
    "docker"
  ],
  "author": "Vibe Stack Contributors",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/Resinder/vibe-stack.git"
  },
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=10.0.0"
  }
}
