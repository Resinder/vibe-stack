      },
      "postgres": {
        "repository": "postgres",
        "tag": "18.1-alpine",
        "description": "PostgreSQL database",
        "source": "https://hub.docker.com/_/postgres"
      },
      "codeServer": {
        "repository": "lscr.io/linuxserver/code-server",
